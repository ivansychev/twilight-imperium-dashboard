{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    // first argument: 0 - silent, 1 - warning, 2 - error
    "brace-style": [
      2,
      "1tbs",
      { "allowSingleLine": false }
    ],
    "comma-dangle": [ 2, "never" ],
    "quotes": [ 1, "single" ],
    "no-eval": 2,
    "no-with": 2,
    "no-console": 1,
    "no-unexpected-multiline": 1,
    "no-debugger": 2,
    "no-trailing-spaces": 2,
    "no-extra-semi": 1,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-undef": 2,
    "no-undefined": 2,
    "no-magic-numbers": 1,
    "valid-typeof": 2,
    "no-unused-vars": 1,
    "spaced-comment": [2, "always" ],
    "strict": [ 2, "safe" ],
    "semi": [ 1, "never" ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}